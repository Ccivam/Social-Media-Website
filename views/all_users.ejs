<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users - Switter</title>
    <link rel="stylesheet" href="/css/design-system.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">Switter</a>
            <div class="navbar-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/all-users" class="nav-link active">Users</a>
                <a href="/chat" class="nav-link">Chat</a>
                <a href="/social-graph" class="nav-link">Graph</a>
                <a href="/notifications" class="nav-link">Notifications</a>
                <a href="/profile/<%= locals.user._id %>" class="nav-link">Profile</a>
                <a href="/signout" class="btn btn-ghost btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container py-8">
        <div class="max-w-6xl mx-auto">
            <div class="mb-8">
                <h1 class="text-3xl font-bold mb-2">Discover People</h1>
                <p class="text-muted">Connect with people on Switter</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% for(let user of users) { %>
                    <% if(user._id.toString() !== locals.user._id.toString()) { %>
                        <% 
                            let isFriend = locals.user.friends && locals.user.friends.some(f => f._id.toString() === user._id.toString());
                            let requestSent = locals.user.sentRequests && locals.user.sentRequests.some(r => r._id.toString() === user._id.toString());
                            let requestReceived = locals.user.friendRequests && locals.user.friendRequests.some(r => r._id.toString() === user._id.toString());
                        %>
                        
                        <div class="card hover-lift">
                            <div class="card-content py-6 flex flex-col items-center text-center gap-4">
                                <div class="avatar avatar-xl">
                                    <% if(user.avatar) { %>
                                        <img src="<%= user.avatar %>" alt="<%= user.name %>" class="avatar-image">
                                    <% } else { %>
                                        <div class="avatar-fallback text-2xl"><%= user.name.charAt(0).toUpperCase() %></div>
                                    <% } %>
                                </div>
                                
                                <div class="w-full">
                                    <h3 class="font-semibold text-lg mb-1"><%= user.name %></h3>
                                    <p class="text-sm text-muted"><%= user.email %></p>
                                </div>

                                <div class="flex gap-2 w-full">
                                    <% if(isFriend) { %>
                                        <a href="/chat?friend=<%= user._id %>" class="btn btn-primary flex-1">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                            </svg>
                                            Chat
                                        </a>
                                        <form action="/friends/remove-friend" method="POST" class="flex-1">
                                            <input type="hidden" name="friendId" value="<%= user._id %>">
                                            <button type="submit" class="btn btn-outline w-full">Unfriend</button>
                                        </form>
                                    <% } else if(requestSent) { %>
                                        <button class="btn btn-secondary w-full" disabled>Request Sent</button>
                                    <% } else if(requestReceived) { %>
                                        <form action="/friends/accept-request" method="POST" class="flex-1">
                                            <input type="hidden" name="friendId" value="<%= user._id %>">
                                            <button type="submit" class="btn btn-primary w-full">Accept</button>
                                        </form>
                                        <form action="/friends/reject-request" method="POST" class="flex-1">
                                            <input type="hidden" name="friendId" value="<%= user._id %>">
                                            <button type="submit" class="btn btn-outline w-full">Reject</button>
                                        </form>
                                    <% } else { %>
                                        <form action="/friends/send-request" method="POST" class="w-full">
                                            <input type="hidden" name="friendId" value="<%= user._id %>">
                                            <button type="submit" class="btn btn-primary w-full">Add Friend</button>
                                        </form>
                                    <% } %>
                                </div>

                                <a href="/profile/<%= user._id %>" class="text-sm text-muted hover:underline">View Profile</a>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </main>

    <script>
        <% if(flash.success && flash.success.length > 0){ %>
            new Noty({
                theme: 'relax',
                text: "<%=flash.success%>",
                type: "success",
                layout: "topRight",
                timeout: 1500
            }).show();
        <% } %>
        <% if(flash.error && flash.error.length > 0){ %>
            new Noty({
                theme: 'relax',
                text: "<%=flash.error%>",
                type: "error",
                layout: "topRight",
                timeout: 1500
            }).show();
        <% } %>
    </script>
</body>
</html>
