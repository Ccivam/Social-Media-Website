<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Switter</title>
    <link rel="stylesheet" href="/css/design-system.css">
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">Switter</a>
            <div class="navbar-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/all-users" class="nav-link">Users</a>
                <a href="/chat" class="nav-link">Chat</a>
                <a href="/social-graph" class="nav-link">Graph</a>
                <a href="/notifications" class="nav-link">Notifications</a>
                <a href="/profile/<%= locals.user._id %>" class="nav-link">Profile</a>
                <a href="/signout" class="btn btn-ghost btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container py-8">
        <div class="max-w-2xl mx-auto">
            <div class="mb-6">
                <h1 class="text-3xl font-bold mb-2">Edit Profile</h1>
                <p class="text-muted">Update your profile information</p>
            </div>

            <div class="card">
                <div class="card-content py-6">
                    <form action="/update/<%= locals.user._id %>" method="POST" enctype="multipart/form-data" class="flex flex-col gap-6">
                        <!-- Profile Picture -->
                        <div class="flex flex-col items-center gap-4">
                            <div class="avatar avatar-xl">
                                <% if(locals.user.avatar) { %>
                                    <img src="<%= locals.user.avatar %>" alt="<%= locals.user.name %>" class="avatar-image" id="avatar-preview">
                                <% } else { %>
                                    <div class="avatar-fallback text-2xl" id="avatar-fallback"><%= locals.user.name.charAt(0).toUpperCase() %></div>
                                <% } %>
                            </div>
                            <div class="flex flex-col gap-2 items-center">
                                <label for="avatar" class="btn btn-outline btn-sm cursor-pointer">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                                        <circle cx="12" cy="13" r="4"></circle>
                                    </svg>
                                    Change Photo
                                </label>
                                <input 
                                    type="file" 
                                    name="avatar" 
                                    id="avatar" 
                                    accept="image/*"
                                    style="display: none;"
                                >
                                <p class="text-sm text-muted">JPG, PNG or GIF (max 10MB)</p>
                            </div>
                        </div>

                        <div class="separator"></div>

                        <!-- Name -->
                        <div class="flex flex-col gap-2">
                            <label for="name" class="text-sm font-medium">Name</label>
                            <input 
                                type="text" 
                                name="name" 
                                id="name"
                                class="input" 
                                value="<%= locals.user.name %>"
                                required
                            >
                        </div>

                        <!-- Email -->
                        <div class="flex flex-col gap-2">
                            <label for="email" class="text-sm font-medium">Email</label>
                            <input 
                                type="email" 
                                name="email" 
                                id="email"
                                class="input" 
                                value="<%= locals.user.email %>"
                                required
                            >
                        </div>

                        <!-- Buttons -->
                        <div class="flex gap-3">
                            <button type="submit" class="btn btn-primary flex-1">Save Changes</button>
                            <a href="/profile/<%= locals.user._id %>" class="btn btn-outline flex-1">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Notification Settings -->
            <div class="card mt-6">
                <div class="card-header">
                    <h3 class="card-title">Notification Settings</h3>
                    <p class="card-description">Manage how you receive notifications</p>
                </div>
                <div class="card-content">
                    <form action="/notifications/settings" method="POST" class="flex flex-col gap-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium">Friend Requests</p>
                                <p class="text-sm text-muted">Get notified when someone sends you a friend request</p>
                            </div>
                            <input 
                                type="checkbox" 
                                name="friendRequests" 
                                <%= locals.user.notificationSettings && locals.user.notificationSettings.friendRequests ? 'checked' : '' %>
                                class="w-4 h-4"
                            >
                        </div>

                        <div class="separator"></div>

                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium">Comments</p>
                                <p class="text-sm text-muted">Get notified when someone comments on your post</p>
                            </div>
                            <input 
                                type="checkbox" 
                                name="comments" 
                                <%= locals.user.notificationSettings && locals.user.notificationSettings.comments ? 'checked' : '' %>
                                class="w-4 h-4"
                            >
                        </div>

                        <div class="separator"></div>

                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium">Likes</p>
                                <p class="text-sm text-muted">Get notified when someone likes your post</p>
                            </div>
                            <input 
                                type="checkbox" 
                                name="likes" 
                                <%= locals.user.notificationSettings && locals.user.notificationSettings.likes ? 'checked' : '' %>
                                class="w-4 h-4"
                            >
                        </div>

                        <div class="separator"></div>

                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium">Messages</p>
                                <p class="text-sm text-muted">Get notified when you receive a new message</p>
                            </div>
                            <input 
                                type="checkbox" 
                                name="messages" 
                                <%= locals.user.notificationSettings && locals.user.notificationSettings.messages ? 'checked' : '' %>
                                class="w-4 h-4"
                            >
                        </div>

                        <button type="submit" class="btn btn-primary">Save Preferences</button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Preview avatar on file select
        document.getElementById('avatar').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('avatar-preview');
                    const fallback = document.getElementById('avatar-fallback');
                    
                    if (preview) {
                        preview.src = e.target.result;
                    } else if (fallback) {
                        fallback.parentElement.innerHTML = `<img src="${e.target.result}" alt="Preview" class="avatar-image" id="avatar-preview">`;
                    }
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>
