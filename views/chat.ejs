<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat - Switter</title>
    <link rel="stylesheet" href="/css/design-system.css">
    <style>
        .chat-layout {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1rem;
            height: calc(100vh - 7rem);
        }
        
        @media (min-width: 768px) {
            .chat-layout {
                grid-template-columns: 280px 1fr;
                gap: 1.5rem;
                height: calc(100vh - 8rem);
            }
        }
        
        @media (min-width: 1024px) {
            .chat-layout {
                grid-template-columns: 320px 1fr;
            }
        }
        
        .friends-list {
            overflow-y: auto;
            max-height: 300px;
        }
        
        @media (min-width: 768px) {
            .friends-list {
                max-height: none;
            }
        }
        
        .chat-area {
            display: flex;
            flex-direction: column;
            min-height: 400px;
        }
        
        @media (min-width: 768px) {
            .chat-area {
                min-height: auto;
            }
        }
        
        .messages-container {
            flex: 1;
            overflow-y: auto;
            padding: 0.75rem;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            -webkit-overflow-scrolling: touch;
        }
        
        @media (min-width: 768px) {
            .messages-container {
                padding: 1.5rem;
                gap: 1rem;
            }
        }
        
        .message {
            max-width: 85%;
            padding: 0.625rem 0.875rem;
            border-radius: 1rem;
            word-wrap: break-word;
            font-size: 0.875rem;
        }
        
        @media (min-width: 768px) {
            .message {
                max-width: 70%;
                padding: 0.75rem 1rem;
                font-size: 0.9375rem;
            }
        }
        
        .message-sent {
            align-self: flex-end;
            background-color: hsl(var(--primary));
            color: hsl(var(--primary-foreground));
        }
        
        .message-received {
            align-self: flex-start;
            background-color: hsl(var(--muted));
        }
        
        .chat-input-form {
            padding: 0.75rem;
            border-top: 1px solid hsl(var(--border));
        }
        
        @media (min-width: 768px) {
            .chat-input-form {
                padding: 1.5rem;
            }
        }
        
        .chat-input-form form {
            display: flex;
            gap: 0.5rem;
        }
        
        .friend-item {
            cursor: pointer;
            transition: background-color 0.15s ease;
        }
        
        .friend-item.active {
            background-color: hsl(var(--accent));
        }
        
        @media (max-width: 767px) {
            .friends-sidebar-mobile {
                position: relative;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">Switter</a>
            <div class="navbar-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/all-users" class="nav-link">Users</a>
                <a href="/chat" class="nav-link active">Chat</a>
                <a href="/social-graph" class="nav-link">Graph</a>
                <a href="/notifications" class="nav-link">Notifications</a>
                <a href="/profile/<%= locals.user._id %>" class="nav-link">Profile</a>
                <a href="/signout" class="btn btn-ghost btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container py-8">
        <div class="max-w-6xl mx-auto">
            <div class="chat-layout">
                <!-- Friends Sidebar -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Messages</h3>
                        <p class="card-description"><%= friends.length %> friends</p>
                    </div>
                    <div class="card-content friends-list">
                        <% if(friends.length === 0) { %>
                            <div class="text-center py-8">
                                <p class="text-sm text-muted mb-4">No friends yet</p>
                                <a href="/all-users" class="btn btn-primary btn-sm">Find Friends</a>
                            </div>
                        <% } else { %>
                            <div class="flex flex-col gap-1">
                                <% for(let friend of friends) { %>
                                    <button 
                                        class="friend-item flex items-center gap-3 p-3 rounded hover:bg-accent w-full text-left"
                                        data-friend-id="<%= friend._id %>"
                                        data-friend-name="<%= friend.name %>"
                                    >
                                        <div class="avatar">
                                            <% if(friend.avatar) { %>
                                                <img src="<%= friend.avatar %>" alt="<%= friend.name %>" class="avatar-image">
                                            <% } else { %>
                                                <div class="avatar-fallback"><%= friend.name.charAt(0).toUpperCase() %></div>
                                            <% } %>
                                        </div>
                                        <div class="flex-1">
                                            <p class="font-medium"><%= friend.name %></p>
                                            <p class="text-sm text-muted"><%= friend.email %></p>
                                        </div>
                                    </button>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Chat Area -->
                <div class="card chat-area">
                    <div class="card-header" id="chat-header">
                        <h3 class="card-title">Select a friend to start chatting</h3>
                    </div>
                    
                    <div class="messages-container" id="messages-container">
                        <div class="flex items-center justify-center h-full">
                            <div class="text-center">
                                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="mx-auto mb-4 text-muted">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                </svg>
                                <p class="text-muted">Select a friend to start messaging</p>
                            </div>
                        </div>
                    </div>

                    <div class="chat-input-form" id="chat-input-area" style="display: none;">
                        <form id="chat-form">
                            <input 
                                type="text" 
                                id="message-input" 
                                class="input" 
                                placeholder="Type a message..."
                                required
                                style="flex: 1;"
                            >
                            <button type="submit" class="btn btn-primary" style="flex-shrink: 0;">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <line x1="22" y1="2" x2="11" y2="13"></line>
                                    <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                                </svg>
                                <span class="sm:hidden">Send</span>
                                <span class="hidden sm:inline">Send</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const userId = '<%= locals.user._id %>';
        let currentFriendId = null;
        let currentFriendName = null;

        socket.emit('join', userId);

        // Friend selection
        document.querySelectorAll('.friend-item').forEach(item => {
            item.addEventListener('click', async function() {
                currentFriendId = this.dataset.friendId;
                currentFriendName = this.dataset.friendName;

                // Update active state
                document.querySelectorAll('.friend-item').forEach(i => {
                    i.classList.remove('bg-accent');
                    i.classList.remove('active');
                });
                this.classList.add('bg-accent');
                this.classList.add('active');

                // Update header
                document.getElementById('chat-header').innerHTML = `
                    <h3 class="card-title">${currentFriendName}</h3>
                `;

                // Show input area
                document.getElementById('chat-input-area').style.display = 'block';

                // Load chat history
                try {
                    const response = await fetch(`/chat/history/${currentFriendId}`);
                    const data = await response.json();
                    displayMessages(data.data.messages);
                } catch(err) {
                    console.error('Error loading messages:', err);
                }
            });
        });

        // Send message
        document.getElementById('chat-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const messageInput = document.getElementById('message-input');
            const message = messageInput.value.trim();

            if(message && currentFriendId) {
                socket.emit('send_message', {
                    senderId: userId,
                    receiverId: currentFriendId,
                    message: message
                });

                // Add message to UI
                addMessageToUI(message, true);
                messageInput.value = '';
            }
        });

        // Receive message
        socket.on('receive_message', (data) => {
            console.log('Received message:', data);
            if(data.sender._id === currentFriendId) {
                addMessageToUI(data.message, false);
            }
        });

        // Message sent confirmation
        socket.on('message_sent', (data) => {
            console.log('Message sent confirmation:', data);
        });

        function displayMessages(messages) {
            const container = document.getElementById('messages-container');
            container.innerHTML = '';

            messages.forEach(msg => {
                const isSent = msg.sender._id === userId;
                addMessageToUI(msg.message, isSent);
            });

            scrollToBottom();
        }

        function addMessageToUI(message, isSent) {
            const container = document.getElementById('messages-container');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isSent ? 'message-sent' : 'message-received'}`;
            messageDiv.textContent = message;
            container.appendChild(messageDiv);
            scrollToBottom();
        }

        function scrollToBottom() {
            const container = document.getElementById('messages-container');
            container.scrollTop = container.scrollHeight;
        }
    </script>
</body>
</html>
