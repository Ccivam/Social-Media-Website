<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifications - Switter</title>
    <link rel="stylesheet" href="/css/design-system.css">
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">Switter</a>
            <div class="navbar-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/all-users" class="nav-link">Users</a>
                <a href="/chat" class="nav-link">Chat</a>
                <a href="/social-graph" class="nav-link">Graph</a>
                <a href="/notifications" class="nav-link active">
                    Notifications
                    <% if(unreadCount > 0) { %>
                        <span class="badge badge-destructive" style="margin-left: 0.25rem;"><%= unreadCount %></span>
                    <% } %>
                </a>
                <a href="/profile/<%= locals.user._id %>" class="nav-link">Profile</a>
                <a href="/signout" class="btn btn-ghost btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container py-8">
        <div class="max-w-2xl mx-auto">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-3xl font-bold mb-2">Notifications</h1>
                    <p class="text-muted">Stay updated with your activity</p>
                </div>
                <% if(notifications.length > 0) { %>
                    <form action="/notifications/mark-all-read" method="POST">
                        <button type="submit" class="btn btn-outline btn-sm">Mark all as read</button>
                    </form>
                <% } %>
            </div>

            <% if(notifications.length === 0) { %>
                <div class="card">
                    <div class="card-content py-12 text-center">
                        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="mx-auto mb-4 text-muted">
                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                            <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                        </svg>
                        <p class="text-muted">No notifications yet</p>
                    </div>
                </div>
            <% } else { %>
                <div class="flex flex-col gap-2">
                    <% for(let notification of notifications) { %>
                        <div class="card <%= notification.read ? '' : 'border-primary' %> hover-lift">
                            <div class="card-content p-4">
                                <div class="flex items-start gap-4">
                                    <div class="avatar">
                                        <% if(notification.sender && notification.sender.avatar) { %>
                                            <img src="<%= notification.sender.avatar %>" alt="<%= notification.sender.name %>" class="avatar-image">
                                        <% } else if(notification.sender) { %>
                                            <div class="avatar-fallback"><%= notification.sender.name.charAt(0).toUpperCase() %></div>
                                        <% } else { %>
                                            <div class="avatar-fallback">S</div>
                                        <% } %>
                                    </div>

                                    <div class="flex-1">
                                        <p class="text-sm">
                                            <% if(notification.sender) { %>
                                                <span class="font-semibold"><%= notification.sender.name %></span>
                                            <% } %>
                                            <%= notification.message %>
                                        </p>
                                        <p class="text-sm text-muted mt-1">
                                            <%= new Date(notification.createdAt).toLocaleDateString('en-US', { 
                                                month: 'short', 
                                                day: 'numeric', 
                                                hour: '2-digit', 
                                                minute: '2-digit' 
                                            }) %>
                                        </p>
                                    </div>

                                    <div class="flex items-center gap-2">
                                        <% if(!notification.read) { %>
                                            <span class="badge badge-default">New</span>
                                        <% } %>
                                        <% if(!notification.read) { %>
                                            <form action="/notifications/mark-read/<%= notification._id %>" method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-ghost btn-sm">
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <polyline points="20 6 9 17 4 12"></polyline>
                                                    </svg>
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script>
        <% if(flash.success && flash.success.length > 0){ %>
            new Noty({
                theme: 'relax',
                text: "<%=flash.success%>",
                type: "success",
                layout: "topRight",
                timeout: 1500
            }).show();
        <% } %>
        <% if(flash.error && flash.error.length > 0){ %>
            new Noty({
                theme: 'relax',
                text: "<%=flash.error%>",
                type: "error",
                layout: "topRight",
                timeout: 1500
            }).show();
        <% } %>
    </script>
</body>
</html>
